<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <!--        <variable-->
        <!--            name="viewModel"-->
        <!--            type="com.example.mvvmadapter.ViewModel.ViewModel" />-->

    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_book"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_book"
        app:layout_constraintTop_toTopOf="@id/iv_book"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        tools:text="제목: 원씽(The One Thing) ( 복잡한 세상을 이기는 단순함의 힘)"/>

    <TextView
        android:id="@+id/tv_book_writen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@id/tv_book_title"
        tools:text="저자 : 게리 켈러 ^ 제이 파파산" />

    <TextView
        android:id="@+id/tv_book_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@id/tv_book_writen"
        tools:text="출판사: 비즈니스 북스" />

    <TextView
        android:id="@+id/tv_book_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_book_title"
        app:layout_constraintTop_toBottomOf="@id/tv_book_company"
        tools:text="가격: 12600" />




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>